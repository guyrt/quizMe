{
    "name": "Freesociate",
    "description": "Reduce the fog of war",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "runOnceActions.js",
                "main.js"
            ]
        }
    ],
    "options_page": "options.html",
    "action": {
        "default_icon": {
            "16": "/images/logo-16x16.png",
            "48": "/images/logo-48x48.png",
            "128": "/images/logo-128x128.png"
        },
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}